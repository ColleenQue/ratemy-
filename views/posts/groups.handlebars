<article>
    <h2>{{name}}</h2>
    <img src={{groupImage}} alt="{{name}}" width="500px" height="300px"/>
    <dl>
        <dt>Number of Members</dt>
        <dd>{{numOfMembers}}</dd>
        <dt>Debut Date</dt>
        <dd>{{debutDate}}</dd>
        <dt>Awards</dt>
        <dd>{{awards}}</dd>
        <dt>Greeting</dt>
        <dd>{{greeting}}</dd>
        <dt>Fandom Name</dt>
        <dd>{{fandomName}}</dd>
        <dt>Fandom Color</dt>
        <dd>{{fandomColor}}</dd>
        <dt>Social Media Accounts</dt>
        <dd>
            {{#each socialMedia}}
            <dl>
                <dt>{{this.type}}</dt>
                <dd>{{this.handle}}</dd>
            </dl>
            {{/each}}
        </dd>
        <dt>Group Members</dt>
        <dd>
            {{#each memberLinks}}
            <ul>
                <li><a href="/idols/{{../name}}-{{this}}">{{this}}</a></li>
            </ul>
            {{/each}}
        </dd>
    </dl>
{{#if error}}
<p class="error"> {{error}}</p>
{{/if}}
<a href="/groups">Go Back To All Groups!</a>
</article>