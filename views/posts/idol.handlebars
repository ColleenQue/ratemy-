<article>
    <h2 id="name">{{name}}</h2>
    <img src={{idolImage}} alt="{{name}}" width="500px" height="500px"/>
    <dl>
        <dt>Role</dt>
        <dd>{{role}}</dd>
        <dt>Group</dt>
        <dd id="group">{{group}}</dd>
        <dt>Age</dt>
        <dd>{{age}}</dd>
        <dt>Date Of Birth</dt>
        <dd>{{dob}}</dd>
        <dt>Height</dt>
        <dd>{{height}}</dd>
        <dt>Weight</dt>
        <dd>{{weight}}</dd>
        <dt>Fandom Name</dt>
        <dd>{{fandomName}}</dd>
        <dt>Fandom Color</dt>
        <dd>{{fandomColor}}</dd>
        <dt>Fun Facts</dt>
        <dd>
            {{#each funFacts}}
            <ul>{{this}}</ul>
            {{/each}}
        </dd>
        <dt>Social Media Accounts</dt>
        <dd>
            {{#each socialMedia}}
            <dl>
                <dt>{{this.type}}</dt>
                <dd>{{this.handle}}</dd>
            </dl>
            {{/each}}
        </dd>
    </dl>
    <span id="heart-fill-2" hidden><i class="fa-solid fa-heart"></i></span>
    <span id="heart-no-fill-2" hidden><i class="fa-regular fa-heart"></i></span>
    {{#if like}}
    <span id="heart-fill"><i class="fa-solid fa-heart"></i></span>
    {{else}}
        <span id="heart-no-fill"><i class="fa-regular fa-heart"></i></span>
    {{/if}}
<p id="note">Click on heart to like the group!</p>
<br>
{{#if error}}
<p class="error"> {{error}}</p>
{{/if}}

{{#if create}}
<a href="/idols/newIdol">{{create}}</a>
{{/if}}

<br>

<a href="/idols">Get list of all idols</a>
</article>