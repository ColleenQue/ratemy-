<h2>List of All Groups</h2>
<div>
<ul class="groupList"></ul>
{{#if groups}}
{{#each groups}}
	<li><a href="/groups/{{this}}">{{this}}</li>
{{/each}}
{{else}}
<p>No Group available</p>
{{/if}}
</ul>


{{#if error}}
<p class="error"> {{error}}</p>
{{/if}}

<a href="/groups/newGroup">Can't find a group. Create it here!</a>

</div>